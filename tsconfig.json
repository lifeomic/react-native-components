{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "declaration": false,
    "baseUrl": ".",
    "lib": ["es2017", "es6", "dom"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*", "example/**/*", "__mocks__/**/*"]
}
