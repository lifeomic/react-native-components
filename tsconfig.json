{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "declaration": false,
    "noEmit": true,
    "baseUrl": ".",
    "lib": ["es2017", "es6", "dom"],
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@styles": ["./src/components/BrandConfigProvider/styles/types"],
      "@i18n": ["./src/components/TrackTile/i18n"],
      "@i18n/*": ["./src/components/TrackTile/i18n/*"]
    }
  },
  "include": [
    "index.ts",
    "src/**/*",
    "lib/**/*",
    "example/**/*",
    "__mocks__/**/*"
  ]
}
